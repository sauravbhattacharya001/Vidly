@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("Add New Movie", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Random Movie", "Random", null, new { @class = "btn btn-default" })
</p>

@if (!Model.Any())
{
    <p class="text-muted">No movies available.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>@Html.ActionLink("Id", "Index", new { sortBy = "Id" })</th>
                <th>@Html.ActionLink("Name", "Index", new { sortBy = "Name" })</th>
                <th>Release Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Name</td>
                    <td>@(movie.ReleaseDate.HasValue ? movie.ReleaseDate.Value.ToString("MMM dd, yyyy") : "â€”")</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = movie.Id }, new { @class = "btn btn-sm btn-info" })
                        @using (Html.BeginForm("Delete", "Movies", new { id = movie.Id }, FormMethod.Post, new { style = "display:inline" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Delete this movie?');">Delete</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
